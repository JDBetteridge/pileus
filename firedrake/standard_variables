
# PETSc/SLEPc variables
export PETSC_DIR=/data/shared/pileus/petsc
export PETSC_ARCH=real-opt
export SLEPC_DIR=/data/shared/pileus/slepc

# Location of package dependencies
export PACKAGES=/data/shared/pileus/petsc/packages

# MPI variables
export MPICH_DIR=$PACKAGES
export MPIEXEC=$MPICH_DIR/bin/mpiexec
export MPICC=$MPICH_DIR/bin/mpicc
export MPICXX=$MPICH_DIR/bin/mpicxx
export MPIFORT=$MPICH_DIR/bin/mpifort
export MPIF90=$MPICH_DIR/bin/mpif90

# HDF5 Variables
export HDF5_DIR=$PACKAGES
export HDF5_MPI ON

# BLAS and LAPACK variables
export BLAS=$PACKAGES
export LAPACK=$PACKAGES
export OPENBLAS=$PACKAGES

# Python
export PYTHON=/usr/bin/python3.11

# Turn off threading
export OMP_NUM_THREADS=1
export OPENBLAS_NUM_THREADS=1
